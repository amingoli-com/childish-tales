<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/iransans_m</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--activity_info_story.xml-->
    <style name="info_story_key_box">
        <item name="android:background">@drawable/row_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_3sdp</item>
    </style>

    <style name="info_story_text_key_box">
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="info_story_image_key_box">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
    </style>


    <style name="player_cardview">
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:layout_width">@dimen/_48sdp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
    </style>

    <style name="player_image_btn">
        <item name="android:tint">#e74d88</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
