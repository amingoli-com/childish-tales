<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eee"
    tools:context=".activtiy.InfoStoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/box_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_280sdp">
                <ImageView
                    android:id="@+id/background_image"
                    android:src="@drawable/s_1"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/title"
                    android:background="#74000000"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold"
                    android:textColor="#eee"
                    android:layout_alignParentBottom="true"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:tag="text"
                    android:onClick="intent"
                    style="@style/info_story_key_box">
                    <ImageView
                        android:src="@drawable/ic_text"
                        style="@style/info_story_image_key_box"/>
                    <TextView
                        android:text="مطالعه متن داستان"
                        style="@style/info_story_text_key_box"/>
                </LinearLayout>

                <LinearLayout
                    android:tag="memory"
                    android:onClick="intent"
                    style="@style/info_story_key_box">
                    <ImageView
                        android:src="@drawable/ic_memory"
                        style="@style/info_story_image_key_box"/>
                    <TextView
                        android:text="خاطره کودک شما از این داستان"
                        style="@style/info_story_text_key_box"/>
                </LinearLayout>

                <LinearLayout
                    android:tag="my_sound"
                    android:onClick="intent"
                    style="@style/info_story_key_box">
                    <ImageView
                        android:src="@drawable/ic_micro"
                        style="@style/info_story_image_key_box"/>
                    <TextView
                        android:text="این داستان با صدای‌شما"
                        style="@style/info_story_text_key_box"/>
                </LinearLayout>

                <LinearLayout
                    android:tag="bookmark"
                    android:onClick="intent"
                    style="@style/info_story_key_box">
                    <ImageView
                        android:src="@drawable/ic_bookmark"
                        style="@style/info_story_image_key_box"/>
                    <TextView
                        android:text="ثبت به عنوان داستان منتخب"
                        style="@style/info_story_text_key_box"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/desc"
                android:maxLength="313"
                android:maxLines="10"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textColor="#333"
                android:padding="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_70sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/layout_play_sound"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/play_sound"/>

    <ImageView
        android:onClick="back"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/bg_radius_back"
        android:src="@drawable/ic_falesh"
        android:paddingStart="@dimen/_3sdp"
        android:paddingEnd="@dimen/_3sdp"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        tools:ignore="OnClick" />
</RelativeLayout>